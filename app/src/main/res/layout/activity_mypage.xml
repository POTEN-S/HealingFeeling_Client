<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/healing_pink"
        tools:context=".MypageActivity">

        <TextView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Page"
            android:fontFamily="@font/dancingscript"
            android:textSize="32sp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


        <Button
            android:id="@+id/logoutButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_bg"
            android:text="로그아웃"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/calendarView" />

        <ImageView
            android:id="@+id/progressHappy"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toStartOf="@+id/progressSad"
            app:layout_constraintTop_toTopOf="@+id/progressSad"
            app:progress_background_color="#F4F1F1"
            app:progress_end_color="#F1B7F3"
            app:progress_start_color="#F1B7F3"
            app:progress_stroke_cap="round"
            app:progress_stroke_width="10dp"
            app:srcCompat="@drawable/smile"
            app:style="solid_line" />

        <ImageView
            android:id="@+id/progressSad"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/sadview"
            app:progress_background_color="#F4F1F1"
            app:progress_end_color="#03A9F4"
            app:progress_start_color="#03A9F4"
            app:progress_stroke_cap="round"
            app:progress_stroke_width="10dp"
            app:srcCompat="@drawable/sad"
            app:style="solid_line"
            tools:layout_editor_absoluteY="738dp" />

        <ImageView
            android:id="@+id/progressAngry"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toEndOf="@+id/progressSad"
            app:layout_constraintTop_toTopOf="@+id/progressSad"
            app:progress_background_color="#F4F1F1"
            app:progress_end_color="#F44336"
            app:progress_start_color="#F44336"
            app:progress_stroke_cap="round"
            app:progress_stroke_width="10dp"
            app:srcCompat="@drawable/angry"
            app:style="solid_line" />

        <TextView
            android:id="@+id/hyview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="행복"
            app:layout_constraintEnd_toEndOf="@+id/progressHappy"
            app:layout_constraintStart_toStartOf="@+id/progressHappy"
            app:layout_constraintTop_toBottomOf="@+id/progressHappy" />

        <TextView
            android:id="@+id/sadview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="슬픔"
            app:layout_constraintBottom_toTopOf="@+id/logoutButton"
            app:layout_constraintEnd_toEndOf="@+id/progressSad"
            app:layout_constraintStart_toStartOf="@+id/progressSad" />

        <TextView
            android:id="@+id/angryview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="분노"
            app:layout_constraintEnd_toEndOf="@+id/progressAngry"
            app:layout_constraintStart_toStartOf="@+id/progressAngry"
            app:layout_constraintTop_toBottomOf="@+id/progressSad" />


        <Button
            android:id="@+id/userDeleteButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_bg"
            android:text="회원탈퇴"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/calendarView" />



        <com.applandeo.materialcalendarview.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:pagesColor="@android:color/transparent"
            app:headerColor="@color/healing_yellow"
            app:headerLabelColor="@color/hot_pink"
            app:todayLabelColor="@color/hot_pink"
            app:selectionLabelColor="#253E55"
            app:mcv_showOtherDates="all"
            android:background="#ffffff"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />





        <TextView
            android:id="@+id/textView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/calendarView"
            app:layout_constraintStart_toStartOf="@+id/calendarView"
            app:layout_constraintTop_toBottomOf="@+id/calendarView"
            android:layout_marginTop="45dp"
            android:padding="10dp"
            android:background="#F0E2F1"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/contextEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="오늘의 감정일기."
            android:inputType="textMultiLine"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/calendarView"
            app:layout_constraintStart_toStartOf="@+id/calendarView"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            app:layout_constraintTop_toTopOf="@+id/contextEditText"
            app:layout_constraintBottom_toBottomOf="@+id/contextEditText"
            app:layout_constraintEnd_toEndOf="@+id/calendarView"
            app:layout_constraintStart_toStartOf="@+id/calendarView"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/save_Btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="20dp"
            android:text="저장"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/progressSad"
            app:layout_constraintEnd_toEndOf="@+id/calendarView"
            app:layout_constraintStart_toStartOf="@+id/calendarView"
            app:layout_constraintTop_toBottomOf="@+id/contextEditText" />


        <Button
            android:id="@+id/cha_Btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="수정"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/calendarView"
            app:layout_constraintTop_toBottomOf="@+id/contextEditText" />

        <Button
            android:id="@+id/del_Btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="삭제"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/calendarView"
            app:layout_constraintTop_toBottomOf="@+id/contextEditText" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/happy_cal"
            tools:layout_editor_absoluteY="150dp"

            app:layout_constraintStart_toStartOf="@id/calendarView"
            app:layout_constraintTop_toBottomOf="@+id/calendarView"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/calendar_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : 행복한날   "
            android:textColor="#27D153"
            app:flow_verticalAlign="center"
            app:layout_constraintEnd_toEndOf="@id/progressHappy"
            app:layout_constraintStart_toEndOf="@id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/calendarView"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/sad_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/sad_cal"
            tools:layout_editor_absoluteY="150dp"

            app:layout_constraintStart_toEndOf="@id/calendar_detail"
            app:layout_constraintTop_toBottomOf="@+id/calendarView"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/sad_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : 우울한날   "
            android:textColor="#728399"
            app:flow_verticalAlign="center"

            app:layout_constraintStart_toEndOf="@id/sad_image"
            app:layout_constraintTop_toBottomOf="@+id/calendarView"
            android:layout_marginTop="10dp"
            />


        <ImageView
            android:id="@+id/angry_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/angry_cal"
            tools:layout_editor_absoluteY="150dp"

            app:layout_constraintStart_toEndOf="@id/sad_detail"
            app:layout_constraintTop_toBottomOf="@+id/calendarView"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/angry_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : 화난날    "
            android:textColor="#BB34C0"
            app:flow_verticalAlign="center"
            app:layout_constraintEnd_toEndOf="@id/calendarView"
            app:layout_constraintStart_toEndOf="@id/angry_image"
            app:layout_constraintTop_toBottomOf="@+id/calendarView"
            android:layout_marginTop="10dp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>