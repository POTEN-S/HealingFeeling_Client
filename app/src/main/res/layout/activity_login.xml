<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="112dp"
        android:text="Healing Feeling!"
        android:textSize="25dp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="300dp"
        android:layout_height="130dp"
        app:layout_constraintBottom_toTopOf="@+id/loginActivity_edittext_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/login"/>


    <EditText
        android:id="@+id/loginActivity_edittext_password"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/input_bg"
        android:gravity="center"
        android:hint="패스워드"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/loginActivity_button_login"
        app:layout_constraintEnd_toEndOf="@+id/loginActivity_edittext_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/loginActivity_edittext_id" />

    <Button
        android:id="@+id/loginActivity_button_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_bg"
        android:text="로그인"
        app:layout_constraintBottom_toTopOf="@+id/loginActivity_button_signup"
        app:layout_constraintEnd_toEndOf="@+id/loginActivity_edittext_password"
        app:layout_constraintStart_toStartOf="@+id/loginActivity_edittext_password" />

    <Button
        android:id="@+id/loginActivity_button_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_bg"
        android:text="회원가입"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/loginActivity_button_login"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/loginActivity_button_login" />

    <EditText
        android:id="@+id/loginActivity_edittext_id"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_bg"
        android:gravity="center"
        android:hint="아이디"
        app:layout_constraintBottom_toTopOf="@+id/loginActivity_edittext_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>